<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tp1"
    tools:context=".Notes.Notes_Main">

    <android.support.v7.widget.Toolbar
        android:id="@+id/notes_maintoolbar"
        android:background="@drawable/toolbar_notes_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="NOTES"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textAlignment="center"/>


    </android.support.v7.widget.Toolbar>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:scrollbars="vertical"
            android:layout_below="@+id/notes_maintoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/gotonote"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circular_button"
        android:src="@drawable/ic_add_white_24dp" />
</RelativeLayout>