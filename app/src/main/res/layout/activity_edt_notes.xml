<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#1d0cb7f1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notes.edtNotes">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Notestoolbar"
        android:background="@drawable/toolbar_notes_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="NOTES"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textAlignment="center"/>

    </android.support.v7.widget.Toolbar>

    <EditText

        android:id="@+id/note_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="64dp"
        android:background="#3cb7f1ff"
        android:hint="Type your title here..."
        android:padding="10dp"
        android:textSize="20dp"/>
    <View
        android:layout_below="@+id/note_heading"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#58000000"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="127dp"
        android:layout_marginBottom="1dp"
        android:background="#42b7f1ff">

        <EditText
            android:id="@+id/Notes_Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Type your description here..."
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textSize="20dp" />

    </ScrollView>

    <ImageButton
        android:id="@+id/deletenote"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/circular_button"
        android:src="@drawable/delete" />
    <Button
        android:id="@+id/Create_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:background="@drawable/createbtn_edt_notes"
        android:text="Create Note"
        android:textColor="#ffffff" />



</RelativeLayout>