<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notes.viewNote">
    <android.support.v7.widget.Toolbar
        android:id="@+id/notesviewtoolbar"
        android:background="@drawable/toolbar_notes_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="NOTES"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textAlignment="center"/>
    </android.support.v7.widget.Toolbar>


        <TextView

            android:id="@+id/note_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="64dp"
            android:background="#3cb7f1ff"
            android:hint="Type your title here..."
            android:padding="10dp"
            android:textSize="20dp"/>
        <View
            android:layout_below="@+id/note_heading"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#58000000"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="127dp"
            android:layout_marginBottom="1dp"
            android:background="#42b7f1ff">

            <TextView
                android:id="@+id/Notes_Content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="Here is your Description"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textSize="20dp" />
        </ScrollView>


    <Button
        android:id="@+id/edit_note"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="19dp"
        android:text="Decrypt"
        android:textColor="@color/white"
        android:background="@drawable/editnotebtn"/>


</RelativeLayout>